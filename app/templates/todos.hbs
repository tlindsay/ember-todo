<section id="todoapp">
  <header id="header">
    <h1>Do your shit.</h1>
    {{input id="new-todo" placeholder="Whatcha got?" value=newTodo action='createTodo'}}
  </header>
  <section id="main">
    <ul id="todo-list">
      {{outlet}}
    </ul>
  </section>
  <footer id="footer">
    <span id="todo-count">
      <strong>{{activeCount}}</strong> todos left
    </span>
    <ul id="filters">
      <li>{{#link-to 'todos.index'}}All{{/link-to}}</li>
      <li>{{#link-to 'todos.active'}}Active{{/link-to}}</li>
      <li>{{#link-to 'todos.completed'}}Completed{{/link-to}}</li>
    </ul>

    <button id="clear-completed" {{action 'destroyCompletedTodos'}}>
      Clear completed ({{completedCount}})
    </button>
  </footer>
</section>
